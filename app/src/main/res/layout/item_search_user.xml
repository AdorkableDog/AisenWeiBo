<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_micro"
    android:layout_marginLeft="@dimen/spacing_normal"
    android:layout_marginRight="@dimen/spacing_normal"
    android:layout_marginTop="@dimen/spacing_micro"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground" app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="3dip" app:cardElevation="1.5dip">

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="72dip"
        android:gravity="center_vertical" android:orientation="horizontal" android:paddingLeft="16dip"
        android:paddingRight="16dip">

        <org.aisen.android.ui.widget.CircleImageView
            android:id="@+id/imgPhoto" android:layout_width="42dip" android:layout_height="42dip"
            android:src="@drawable/a_icon_b"/>

        <TextView
            android:id="@+id/txtName" style="@style/TextBody" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dip" android:singleLine="true" android:text="我是名字"/>

        <TextView
            android:id="@+id/txtRemark" style="@style/TextSubhead" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@id/txtName" android:layout_marginLeft="56dip"
            android:layout_marginTop="4dip" android:singleLine="true" android:text="我的备注"
            android:textSize="14sp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>