<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_micro"
    android:layout_marginLeft="@dimen/spacing_normal"
    android:layout_marginRight="@dimen/spacing_normal"
    android:layout_marginTop="@dimen/spacing_micro"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="4dip"
    app:cardElevation="3dip">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:padding="@dimen/item_padding">

        <org.aisen.android.ui.widget.CircleImageView
            android:id="@+id/imgPhoto"
            android:layout_width="42dip"
            android:layout_height="42dip"
            android:layout_marginRight="8dip"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/txtName"
            style="@style/TextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgPhoto"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="名字"/>

        <RelativeLayout
            android:id="@+id/layRe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtName"
            android:layout_toRightOf="@id/imgPhoto"
            android:orientation="vertical"
            android:paddingTop="8dip">

            <org.aisen.android.ui.widget.CircleImageView
                android:id="@+id/imgRePhoto"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_marginRight="@dimen/comm_h_gap"/>

            <org.aisen.weibo.sina.ui.widget.AisenTextView
                android:id="@+id/txtReContent"
                style="@style/TextSubhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgRePhoto"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:minHeight="40dip"
                android:textSize="14sp"
                />

        </RelativeLayout>

        <org.aisen.weibo.sina.ui.widget.AisenTextView
            android:id="@+id/txtContent"
            style="@style/TextBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layRe"
            android:layout_marginBottom="8dip"
            android:layout_marginTop="8dip"
            android:layout_toRightOf="@id/imgPhoto"
            android:gravity="center_vertical"
            android:minHeight="26dip"
            android:text="我是评论正文"/>

        <TextView
            android:id="@+id/txtDesc"
            style="@style/TextSubhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtContent"
            android:layout_toRightOf="@id/imgPhoto"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="昨天 来自Aisen微博"/>

        <View
            android:id="@+id/layDivider"
            android:layout_width="match_parent"
            android:layout_height="1.5dip"
            android:layout_below="@id/txtDesc"
            android:layout_marginBottom="8dip"
            android:layout_marginTop="8dip"
            android:background="@color/divider_timeline_item"/>

        <LinearLayout
            android:id="@+id/layStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layDivider"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal">

            <org.aisen.weibo.sina.ui.widget.AisenTextView
                android:id="@+id/txtStatusContent"
                style="@style/TextSubhead"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dip"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="3"/>

            <ImageView
                android:id="@+id/img"
                style="@style/timelinePicture"
                android:layout_width="75dip"
                android:layout_height="75dip"/>

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/btnMenus"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_gravity="right"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingBottom="8dip"
        android:src="@drawable/ic_menu_moreoverflow_card_dark_normal"/>

</android.support.v7.widget.CardView>