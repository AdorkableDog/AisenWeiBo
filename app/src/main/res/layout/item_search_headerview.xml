<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/spacing_normal"
    android:layout_marginTop="@dimen/spacing_normal"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="3dip" app:cardElevation="1.5dip">

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="110dip"
        android:gravity="center_vertical" android:orientation="horizontal"
        android:paddingRight="8dip">

        <ImageView
            android:id="@+id/imgPhoto" android:layout_width="110dip" android:layout_height="110dip"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/txtName" style="@style/TextBody"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginTop="@dimen/spacing_normal"
            android:layout_toRightOf="@id/imgPhoto" android:singleLine="true" android:text="我是名字"/>

        <TextView
            android:id="@+id/txtRemark"
            style="@style/TextSubhead" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_below="@id/txtName" android:layout_marginLeft="@dimen/spacing_normal" android:layout_marginTop="4dip"
            android:layout_toRightOf="@id/imgPhoto" android:maxLines="2" android:text="我的备注"
            android:textSize="14sp"/>

        <org.aisen.android.ui.widget.MDButton
            android:id="@+id/btn" style="@style/TextSubhead"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:layout_alignParentRight="true" android:layout_marginBottom="8dip"
            android:clickable="true" android:gravity="center" android:minHeight="30dip"
            android:paddingLeft="8dip" android:paddingRight="8dip" android:text="关注"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>
